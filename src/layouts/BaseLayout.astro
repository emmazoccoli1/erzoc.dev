---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
interface Props {
  title: string;
  description?: string;
  bodyClass?: string;
}
const { title, description = 'Personal site and blog â€” erzoc.dev', bodyClass } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title} | erzoc.dev</title>
  </head>
  <body class={bodyClass}>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  * { box-sizing: border-box; }
  body {
    font-family: system-ui, sans-serif;
    line-height: 1.6;
    max-width: 720px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    color: #1a1a1a;
    background: #fafafa;
  }
  body.page-home {
    background: transparent;
  }
  body.page-home main {
    background: transparent;
  }
  body.page-retro {
    font-family: 'Courier New', Consolas, monospace;
    background: #8a8a8a;
    color: #1a1a1a;
    max-width: none;
  }
  body.page-retro main {
    max-width: none;
    padding: 1rem 1.5rem;
    background: transparent;
  }
</style>
