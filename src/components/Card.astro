---
interface Props {
  title: string;
  href?: string;
}
const { title, href } = Astro.props;
---
<article class="panel-90s">
  <div class="panel-90s__titlebar">
    <span class="panel-90s__title">{href ? <a href={href}>{title}</a> : title}</span>
  </div>
  <div class="panel-90s__body">
    <slot />
  </div>
</article>

<style>
  .panel-90s {
    background: #c0c0c0;
    border: 2px solid #000;
    box-shadow: 2px 2px 0 #dfdfdf, -1px -1px 0 #808080 inset;
  }
  .panel-90s__titlebar {
    background: linear-gradient(180deg, #0a246a 0%, #0a246a 100%);
    background-color: #0a246a;
    padding: 4px 10px;
    border-bottom: 1px solid #000;
  }
  .panel-90s__title {
    color: #fff;
    font-weight: 600;
    font-size: 0.95rem;
  }
  .panel-90s__title a {
    color: inherit;
    text-decoration: none;
  }
  .panel-90s__title a:hover {
    text-decoration: underline;
  }
  .panel-90s__body {
    padding: 1rem 1.25rem;
    background: #fff;
    margin: 2px;
    border: 1px solid #808080;
    border-top-color: #c0c0c0;
    border-left-color: #c0c0c0;
    color: #000;
    font-size: 0.9rem;
  }
  .panel-90s__body :global(code) {
    background: #e0e0e0;
    padding: 2px 6px;
    border: 1px solid #808080;
    font-size: 0.85em;
  }
</style>
