---
interface Props {
  title: string;
  href?: string;
}
const { title, href } = Astro.props;
---
<article class="card">
  <h3 class="card__title">
    {href ? <a href={href}>{title}</a> : title}
  </h3>
  <div class="card__body">
    <slot />
  </div>
</article>

<style>
  .card {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 1.25rem;
    background: #fff;
  }
  .card__title {
    margin: 0 0 0.5rem;
    font-size: 1.1rem;
  }
  .card__title a {
    color: inherit;
    text-decoration: none;
  }
  .card__title a:hover {
    text-decoration: underline;
  }
  .card__body {
    color: #444;
    font-size: 0.95rem;
  }
</style>
