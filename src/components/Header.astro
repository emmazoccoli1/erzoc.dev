---
import siteData from '@/data/site.json';
const { nav } = siteData;
---
<header class="site-header">
  <nav class="site-nav">
    <a href="/" class="site-nav__brand">{nav.brand}</a>
    {nav.links.map((link) => (
      <a href={link.href} class="site-nav__link">{link.label}</a>
    ))}
    <slot name="after-nav" />
  </nav>
</header>

<style>
  .site-header {
    border-bottom: 1px solid #e0e0e0;
    margin-bottom: 2rem;
  }
  .site-nav {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }
  .site-nav__brand {
    font-weight: 600;
    color: #1a1a1a;
    text-decoration: none;
  }
  .site-nav__brand:hover {
    text-decoration: underline;
  }
  .site-nav__link {
    color: #333;
    text-decoration: none;
  }
  .site-nav__link:hover {
    text-decoration: underline;
  }
</style>
