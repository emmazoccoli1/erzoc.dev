---
import siteData from '@/data/site.json';
const { nav } = siteData;
---
<header class="win95-header">
  <div class="win95-titlebar">
    <span class="win95-titlebar__text">{nav.brand}</span>
  </div>
  <nav class="win95-tabs">
    {nav.links.map((link) => (
      <a href={link.href} class="win95-tab">
        <span class="win95-tab__arrow">&#9664;</span>
        <span class="win95-tab__label">{link.label}</span>
        <span class="win95-tab__arrow">&#9654;</span>
      </a>
    ))}
    <slot name="after-nav" />
  </nav>
</header>

<style>
  .win95-header {
    margin-bottom: 1.5rem;
    border: 2px solid #000;
    box-shadow: 2px 2px 0 #dfdfdf, 2px 2px 0 #dfdfdf inset;
    background: #c0c0c0;
  }
  .win95-titlebar {
    background: linear-gradient(180deg, #0a246a 0%, #0a246a 100%);
    background-color: #0a246a;
    padding: 4px 8px;
    border-bottom: 1px solid #000;
  }
  .win95-titlebar__text {
    color: #fff;
    font-weight: 600;
    font-size: 0.95rem;
    letter-spacing: 0.02em;
  }
  .win95-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 2px;
    padding: 4px;
    background: #c0c0c0;
  }
  .win95-tab {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: linear-gradient(180deg, #ececec 0%, #d4d4d4 50%, #b8b8b8 100%);
    border: 1px solid #fff;
    border-right-color: #808080;
    border-bottom-color: #808080;
    box-shadow: 1px 1px 0 #fff inset, -1px -1px 0 #404040 inset;
    color: #000;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
  }
  .win95-tab:hover {
    background: linear-gradient(180deg, #fff 0%, #e8e8e8 50%, #d0d0d0 100%);
  }
  .win95-tab:active {
    box-shadow: 1px 1px 0 #404040 inset, -1px -1px 0 #fff inset;
    padding: 7px 11px 5px 13px;
  }
  .win95-tab__arrow {
    font-size: 0.65rem;
    color: #404040;
    line-height: 1;
  }
  .win95-tab__label {
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }
</style>
